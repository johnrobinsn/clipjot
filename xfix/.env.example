# XFix Configuration
# Copy this file to .env and fill in your values

# ClipJot API (required)
CLIPJOT_API_URL=https://clipjot.example.com
CLIPJOT_API_TOKEN=your-api-token-here

# Ollama (optional - defaults shown)
OLLAMA_MODEL=qwen3
OLLAMA_HOST=http://localhost:11434

# X.com Fetch Delays in seconds (optional - defaults shown)
XCOM_MIN_DELAY=10
XCOM_MAX_DELAY=60
XCOM_MAX_BACKOFF=3600

# State file path (optional)
STATE_FILE=state.json

# Logging (optional)
# LOG_LEVEL: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
# LOG_VERBOSE: true to show full generated titles/comments
LOG_VERBOSE=true
